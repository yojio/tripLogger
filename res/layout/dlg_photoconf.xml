<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dip"
    >
        <LinearLayout
            android:background="#00000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:src="@drawable/icon_insertpic_w_32"
                ></ImageView>
                <Button
                    android:id="@+id/insertpic"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_gravity="left"
                    android:textColor="#ffffff"
                    android:textSize="20dip"
                    android:text="@string/btncapInsertPhoto"
                    android:padding="5dip"
                    android:background="@android:drawable/list_selector_background"
                >
                </Button>
        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:paddingTop="2dip"
            android:paddingBottom="2dip"
            android:src="@android:drawable/divider_horizontal_dim_dark"
        ></ImageView>
        <LinearLayout
            android:background="#00000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:src="@drawable/icon_takephoto_w_32"
                ></ImageView>
                <Button
                    android:id="@+id/takephoto"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_gravity="left"
                    android:textColor="#ffffff"
                    android:textSize="20dip"
                    android:text="@string/btncapTakePhoto"
                    android:padding="5dip"
                    android:background="@android:drawable/list_selector_background"
                >
                </Button>
        </LinearLayout>
</LinearLayout>
