<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dip"
    >
    <TextView
        android:background="#00000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:textColor="#999999"
        android:textSize="10dip"
        android:gravity="left|center_vertical"
        android:paddingLeft="3dip"
        android:paddingBottom="2dip"
        android:text="@string/cap_tableselect_descript"
    ></TextView>
    <TextView
        android:id="@+id/selecttablemsg"
        android:background="#00000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:textColor="#ff0000"
        android:textSize="10dip"
        android:gravity="left|center_vertical"
        android:paddingLeft="3dip"
        android:paddingBottom="5dip"
    ></TextView>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:paddingTop="2dip"
        android:paddingBottom="2dip"
        android:src="@android:drawable/divider_horizontal_dim_dark"
    ></ImageView>
    <CheckBox android:id="@+id/newtablechk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/cap_makenewtable"
    />
    <EditText
        android:id="@+id/selecttabletext"
        android:layout_gravity="top"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text=""
        android:singleLine="True"
        android:gravity="left"
        android:minHeight="50dip"
        android:visibility="invisible"
    />
    <ImageView
        android:id="@+id/selecttablelist_sep"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:paddingTop="2dip"
        android:paddingBottom="2dip"
        android:src="@android:drawable/divider_horizontal_dim_dark"
    ></ImageView>
    <ListView
        android:id="@+id/selecttablelist"
        android:textSize="14dip"
        android:background="#00000000"
        android:cacheColorHint="#00000000"
        android:smoothScrollbar="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="insideOverlay"
        android:divider="@android:drawable/divider_horizontal_bright"
        android:choiceMode="singleChoice"
        android:layout_weight="1">
    </ListView>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:paddingTop="2dip"
        android:paddingBottom="2dip"
        android:src="@android:drawable/divider_horizontal_dim_dark"
    ></ImageView>
    <TextView
        android:id="@+id/uploadimagechk"
        android:text=""
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_gravity="left|center_vertical"
        android:textColor="#ffffff"
        android:background="@android:drawable/list_selector_background"
        android:textSize="14dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip"
        android:gravity="left|center_vertical"
    ></TextView>
</LinearLayout>
