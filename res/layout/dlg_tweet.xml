<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="2dip"
    >
    <TextView
        android:id="@+id/tweet_location"
        android:text=""
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_gravity="left|center_vertical"
        android:textColor="#ffffff"
        android:background="@android:drawable/list_selector_background"
        android:textSize="14dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingBottom="2dip"
        android:gravity="left|center_vertical"
    ></TextView>
    <EditText
        android:id="@+id/tweet_contents"
        android:layout_gravity="top"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text=""
        android:gravity="left"
        android:minHeight="50dip"
        android:maxLength="120"
        android:minLines="3"
        android:singleLine="False"
    />
    <LinearLayout
        android:background="#00000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:orientation="horizontal"
        android:gravity="left"
        android:padding="0dip"
        >
        <TextView
            android:id="@+id/tweet_tagcap"
            android:text="@string/capdialog_twitter_hashtag"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:textColor="#ffffff"
            android:background="#00000000"
            android:textSize="14dip"
            android:padding="2dip"
            android:gravity="left|center_vertical"
        ></TextView>
        <TextView
            android:id="@+id/tweet_tag"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left|center_vertical"
            android:background="@android:drawable/list_selector_background"
            android:textColor="#ffffff"
            android:textSize="14dip"
            android:gravity="left|center_vertical"
            android:padding="2dip"
            android:layout_weight="1"
        ></TextView>
    </LinearLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:paddingTop="2dip"
        android:paddingBottom="2dip"
        android:src="@android:drawable/divider_horizontal_dim_dark"
    ></ImageView>
    <Button
        android:id="@+id/tweet_imagebtn"
        android:layout_width="fill_parent"
        android:layout_height="25dip"
        android:textColor="#ffffff"
        android:background="@android:drawable/list_selector_background"
        android:text="@string/capdialog_twitter_image_on"
    ></Button>
    <LinearLayout
        android:id="@+id/tweet_image_area"
        android:background="#00000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:orientation="vertical"
        android:gravity="left"
        android:padding="0dip"
        >
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:paddingTop="2dip"
            android:paddingBottom="2dip"
            android:src="@android:drawable/divider_horizontal_dim_dark"
        ></ImageView>
        <ImageView
            android:id="@+id/tweet_image"
            android:layout_width="fill_parent"
            android:layout_height="100dip"
            android:padding="2dip"
        ></ImageView>
        <TextView
            android:id="@+id/tweet_image_size"
            android:text=""
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:background="@android:drawable/list_selector_background"
            android:textSize="14dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingBottom="2dip"
            android:gravity="center"
        ></TextView>
    </LinearLayout>
</LinearLayout>
